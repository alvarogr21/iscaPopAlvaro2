<?xml version="1.0" encoding="utf-8" ?>
<Base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Base="clr-namespace:iscaPopAlvaro.Base"
             x:Class="iscaPopAlvaro.Views.HacerFotoPage"
             Title="Hacer Foto">
    <VerticalStackLayout>
        <Button Text="Hacer Foto"
                    Clicked="HacerFotoClick"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0" />

        <Image x:Name="fotoRealizada"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0" />
    </VerticalStackLayout>
</Base:BasePage>